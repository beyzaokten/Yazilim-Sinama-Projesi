            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .radio-group label {
            margin: 0 10px;
            color: #333;
        }

        input[type="radio"] {
            margin-right: 5px;
        }

        button {
            padding: 15px 30px;
            background-color: #4caf50;
            color: #fff;
            border-radius: 10%;
            cursor: pointer;
            margin-top: 20px;
            font-size: 16px;
